{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Relationship between Score of happiness with different types of score",
  "data": {
    "url": "https://raw.githubusercontent.com/angu0043/DataViz2/main/FullData.csv"
  },
  "params": [
    {
      "name": "Score_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "GDP per capita",
          "Social support",
          "Healthy life expectancy",
          "Freedom to make life choices",
          "Generosity",
          "Perceptions of corruption"
        ],
        "labels": [
          "Null",
          "GDP per capita",
          "Social Support",
          "Healthy life expectancy",
          "Freedom to make life choices",
          "Generosity",
          "Perceptions of corruption"
        ],
        "name": "Score Selection: "
      }
    },
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2019,
        "step": 1,
        "name": "Year : "
      }
    }
  ],
  "transform": [
    {"calculate": "datum[Score_selection]", "as": "Chosen score"},
    {"calculate": "Year_selection", "as": "Chosen Year"},
    {"filter": "datum.Year == Year_selection"}
  ],
  "layer": [
    {
      "mark": {
        "type": "text",
        "fontSize": 100,
        "x": 420,
        "y": 280,
        "opacity": 0.002
      },
      "encoding": {"text": {"field": "Chosen Year"}}
    },
    {
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "Score",
          "type": "quantitative",
          "title": "Score of happiness",
          "axis": {"tickCount": 8},
          "scale": {"domain": [3, 8]}
        },
        "y": {
          "field": "Chosen score",
          "type": "quantitative",
          "title": "Chosen score",
          "axis": {"tickCount": 8}
        },
        "color": {"field": "Continent", "type": "nominal"},
        "tooltip": [
          {"field": "Country or region", "title": "Country", "type": "nominal"},
          {
            "field": "Score",
            "title": "Score of happiness",
            "type": "quantitative",
            "format": ".2f"
          },
          {
            "field": "GDP per capita",
            "title": "GDP",
            "type": "quantitative",
            "format": ".2f"
          },
          {"field": "Social support", "type": "quantitative", "format": ".2f"},
          {
            "field": "Healthy life expectancy",
            "type": "quantitative",
            "format": ".2f"
          },
          {
            "field": "Freedom to make life choices",
            "type": "quantitative",
            "format": ".2f"
          },
          {
            "field": "Perceptions of corruption",
            "type": "quantitative",
            "format": ".2f"
          },
          {"field": "Generosity", "type": "quantitative", "format": ".2f"},
          {"field": "Year", "type": "ordinal"}
        ]
      }
    }
  ],
  "config": {}
}